pipeline {
  agent any

  options {
    timestamps()
    ansiColor('xterm')
    timeout(time: 45, unit: 'MINUTES')
  }

  environment {
    // scoped compose project name to avoid name collisions on the host
    COMPOSE_PROJECT = 'shop_ci'
  }

  stages {
    stage('Checkout') {
      steps {
        echo 'Checking out source from SCM'
        checkout scm
        sh 'ls -la'
      }
    }

    stage('CI Build (docker-compose)') {
      steps {
        echo 'Running CI compose to build frontend and backend'
        // use explicit project name to prevent collisions with production stack
        sh "COMPOSE_PROJECT_NAME=${COMPOSE_PROJECT} docker compose -f docker-compose.jenkins.yml up --build --abort-on-container-exit --exit-code-from frontend_ci"
      }
    }

    stage('Archive artifacts') {
      steps {
        echo 'Archiving frontend build artifacts (client/dist)'
        sh 'if [ -d ./client/dist ]; then tar -czf artifacts-frontend-dist.tar.gz -C client dist; fi'
        archiveArtifacts artifacts: 'artifacts-frontend-dist.tar.gz', fingerprint: true, onlyIfSuccessful: true
      }
    }

    stage('Cleanup CI containers') {
      steps {
        echo 'Tearing down CI containers and volumes'
        sh "COMPOSE_PROJECT_NAME=${COMPOSE_PROJECT} docker compose -f docker-compose.jenkins.yml down -v --remove-orphans || true"
      }
    }
  }

  post {
    always {
      echo 'Post: Ensure CI cleanup'
      sh "COMPOSE_PROJECT_NAME=${COMPOSE_PROJECT} docker compose -f docker-compose.jenkins.yml down -v --remove-orphans || true"
    }
    success {
      echo 'Pipeline succeeded'
    }
    failure {
      echo 'Pipeline failed â€” check logs above'
    }
  }
}