pipeline {
    agent any

    environment {
        FRONTEND_PORT = "8085"  
        BACKEND_PORT = "4001"
        DOCKER_COMPOSE_FILE = "./docker-compose.jenkins.yml"
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo "Cloning project repository..."
                // checkout the same repository the job is configured with
                git branch: 'jenkins', url: 'https://github.com/Muhammad-Daud-0/Shop-Sphere.git'
            }
        }

        stage('Build & Run Containers') {
            steps {
                echo "Docker info and Compose version (for debugging)"
                sh 'docker version || true'
                sh 'docker info || true'
                sh 'docker compose version || docker-compose --version || true'

                echo "Starting Docker Compose build (scoped project shop_ci)..."
                sh """
                  COMPOSE_PROJECT_NAME=shop_ci docker compose -f ${DOCKER_COMPOSE_FILE} down || true
                  COMPOSE_PROJECT_NAME=shop_ci docker compose -f ${DOCKER_COMPOSE_FILE} up --build -d
                """
            }
        }

        stage('Verify Deployment') {
            steps {
                echo "Checking running containers..."
                sh "docker ps --format 'table {{.Names}}\t{{.Ports}}\t{{.Status}}'"
            }
        }
    }

    post {
        success {
            echo "Deployment successful!"
            echo "Frontend: http://3.109.2.224:${FRONTEND_PORT}"
            echo "Backend: http://3.109.2.224:${BACKEND_PORT}"
        }
        failure {
            echo "Deployment failed. Check logs above."
        }
        always {
            sh "COMPOSE_PROJECT_NAME=shop_ci docker compose -f ${DOCKER_COMPOSE_FILE} down -v --remove-orphans || true"
        }
    }
}
