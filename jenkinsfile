pipeline {
  agent any

  options {
    timestamps()
    ansiColor('xterm')
    timeout(time: 60, unit: 'MINUTES')
  }

  stages {
    stage('Checkout') {
      steps {
        echo 'Checking out source from SCM'
        checkout scm
        sh 'ls -la'
      }
    }

    stage('Run CI compose (build inside containers)') {
      steps {
        echo 'Starting docker-compose for CI builds'
        // run docker compose to build frontend and backend inside container images
        sh 'docker compose -f docker-compose.jenkins.yml up --build --abort-on-container-exit --exit-code-from backend_ci'
      }
    }

    stage('Collect artifacts') {
      steps {
        echo 'Collecting frontend build artifacts'
        // frontend build output (vite) usually in client/dist
        sh 'if [ -d ./client/dist ]; then ls -la client/dist; tar -czf artifacts-frontend-dist.tar.gz -C client dist || true; fi'
        archiveArtifacts artifacts: 'artifacts-*.tar.gz', fingerprint: true
      }
    }

    stage('Teardown') {
      steps {
        echo 'Shutting down CI containers'
        sh 'docker compose -f docker-compose.jenkins.yml down -v --remove-orphans'
      }
    }
  }

  post {
    always {
      echo 'Post: ensure cleanup'
      sh 'docker compose -f docker-compose.jenkins.yml down -v --remove-orphans || true'
    }
    success {
      echo 'Pipeline succeeded'
    }
    failure {
      echo 'Pipeline failed â€” inspect the logs above'
    }
  }
}