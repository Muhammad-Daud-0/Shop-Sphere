pipeline {
  agent any

  options {
    timestamps()
    ansiColor('xterm')
    // Short timeout for CI builds; increase if your builds are heavy
    timeout(time: 60, unit: 'MINUTES')
  }

  environment {
    // Scoped compose project name to avoid name collisions on the host
    COMPOSE_PROJECT_NAME = 'shop_ci'
  }

  stages {
    stage('Checkout') {
      steps {
        echo 'Checking out source from SCM'
        checkout scm
        sh 'ls -la'
      }
    }

    stage('CI Build (docker-compose)') {
      steps {
        echo 'Running CI compose to build frontend and backend'
        // Use explicit project name to prevent collisions with production stack
        sh """
          COMPOSE_PROJECT_NAME=${COMPOSE_PROJECT_NAME} \
          docker compose -f docker-compose.jenkins.yml up --build --abort-on-container-exit --exit-code-from frontend_ci
        """
      }
    }

    stage('Archive artifacts') {
      steps {
        echo 'Archiving frontend build artifacts (client/dist)'
        sh """
          if [ -d ./client/dist ]; then
            ls -la client/dist
            tar -czf artifacts-frontend-dist.tar.gz -C client dist
          else
            echo 'No client/dist found, skipping artifact archive'
          fi
        """
        archiveArtifacts artifacts: 'artifacts-frontend-dist.tar.gz', fingerprint: true, allowEmptyArchive: true
      }
    }

    stage('Cleanup CI containers') {
      steps {
        echo 'Tearing down CI containers and volumes'
        sh "COMPOSE_PROJECT_NAME=${COMPOSE_PROJECT_NAME} docker compose -f docker-compose.jenkins.yml down -v --remove-orphans || true"
      }
    }
  }

  post {
    always {
      echo 'Post: ensure CI cleanup'
      sh "COMPOSE_PROJECT_NAME=${COMPOSE_PROJECT_NAME} docker compose -f docker-compose.jenkins.yml down -v --remove-orphans || true"
    }
    success {
      echo 'Pipeline succeeded'
    }
    failure {
      echo 'Pipeline failed â€” check logs above'
    }
  }
}