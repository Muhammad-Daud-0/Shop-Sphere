pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'jenkins', url: 'https://github.com/Muhammad-Daud-0/Shop-Sphere.git'
            }
        }

        stage('Build & Run Containers') {
            steps {
                ansiColor('xterm') {
                    sh 'docker-compose -f docker-compose.jenkins.yml down -v --remove-orphans || true'
                    sh 'docker-compose -f docker-compose.jenkins.yml up -d --build'
                }
            }
        }

        stage('Verify Containers') {
            steps {
                ansiColor('xterm') {
                    sh 'docker ps'
                }
            }
        }
    }

    post {
        always {
            echo "âœ… Pipeline finished. Containers should be running on EC2."
        }
    }
}
